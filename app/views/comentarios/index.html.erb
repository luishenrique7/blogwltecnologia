<ol class="breadcrumb">
  <span>Olá, 
    <b><%= link_to current_usuario.nome%></b>. | 
    Endereço de IP: <b><%= current_usuario.current_sign_in_ip%></b>. | 
    Último login ás: <b><%= current_usuario.current_sign_in_at%></b>. | 
    Qtde. login: <b><%= current_usuario.sign_in_count%></b>.
  </span>
</ol>
<div class="page-header", style="margin: 0 0 0 0;">
  <h1>Comentários</h1>
</div>

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-xs-12">
    <%= link_to 'Novo', new_comentario_path,
            :class => 'btn btn-primary' %>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Post</th>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comentarios.each do |comentario| %>
      <tr>
        <td><%= comentario.usuario.nome %></td>
        <td><%= comentario.post.titulo %></td>
        <td><%= comentario.descricao %></td>
        <td>
          <%= link_to 'Editar', edit_comentario_path(comentario),
                      :class => 'btn btn-default' %>
          </td>
          <td>
          <%= link_to 'Excluir', comentario_path(comentario),
                      :method => :delete,
                      :data => { :confirm => 'Confirma a exclusão?' },
                      :class => 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>