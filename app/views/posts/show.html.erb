
<% if notice.present? %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<p>
  <strong>Usuario:</strong>
  <%= @post.usuario.nome %>
</p>

<p>
  <strong>Titulo:</strong>
  <%= @post.titulo %>
</p>

<p>
  <strong>Conteudo:</strong>
  <%= @post.conteudo %>
</p>

<p>
