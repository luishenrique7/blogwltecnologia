<ol class="breadcrumb">
  <span>Olá, 
    <b><%= link_to current_usuario.nome%></b>. | 
    Endereço de IP: <b><%= current_usuario.current_sign_in_ip%></b>. | 
    Último login ás: <b><%= current_usuario.current_sign_in_at%></b>. | 
    Qtde. login: <b><%= current_usuario.sign_in_count%></b>.
  </span>
</ol>
<div class="page-header", style="margin: -15px 0 0 0;">
  <h1>Posts</h1>
</div>

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-xs-12">
    <%= link_to 'Novo', new_post_path, class: 'btn btn-primary' %>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Autor</th>
      <th style="width: 200px;">Titulo</th>
      <th>Conteudo</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.usuario.nome %></td>
        <td><%= post.titulo %></td>
        <td><%= post.conteudo %></td>
        <td><%= link_to 'Ver', post, class: 'btn btn-default' %></td>
        <td><%= link_to 'Editar', edit_post_path(post), class: 'btn btn-default' %></td>
        <td><%= link_to 'Excluir', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
    <center>
      <% @posts.each do |upload|%>
        <% end %>
      <%= paginate @posts  %>
    </center>
  </tbody>
</table>